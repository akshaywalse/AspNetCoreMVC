@model IEnumerable<OnlineGroceryStore.CategoryProduct.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<div class="jumbotron">
    <div class="container text-left">

        <div>
            <img src="~/Image/1500x200_SBI.gif" alt="..." class="navbar-right" />
        </div>
    </div>
</div>


<!--Carousel Example-->

<div class="container-fluid">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Image/Fv_1500x250.jpg" alt="Fv" style="width:100%;">
                <div class="carousel-caption">
                </div>
            </div>

            <div class="item">
                <img src="~/Image/Mega-offer-banner_1500x2505.jpg" alt="MegaOffer" style="width:100%;">
                <div class="carousel-caption">
                </div>
            </div>

            <div class="item">
                <img src="~/Image/SVD_1500x300.gif" alt="svd" style="width:100%;">
                <div class="carousel-caption">
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<!--Slider end-->
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {


            <div class="col-sm-3">
                <div class="panel panel-primary">

                    <div class="panel-heading">
                        BLACK MONDAY DEAL

                    </div>
                    <div class="container">
                        @{

                            byte[] bt = item.ProductImage;
                            string str = Convert.ToBase64String(bt);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", str);
                            <img class="card-img-top" src="@imgsrc" alt="Card image" style="width:100px; height:100px">

                        }
                    </div>
                    <div class="panel-footer">
                        @Html.DisplayFor(modelItem => item.ProductName) | &#8377; @Html.DisplayFor(modelItem => item.ProductPrice)
                        <p>
                            <a href="#" class="btn btn-warning " style="color:black;">Add to cart</a>
                        </p>
                    </div>
                </div>

            </div>


        }
    </div>
</div>
